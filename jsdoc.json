{
  "source" : {
    "include" : ["src", "README.md", "package.json"],
    "includePattern" : ".js$"
  },
  "plugins" : [
      "plugins/markdown"
  ],
  "opts": {
      "encoding": "utf8",
      "readme": "./README.md",
      "destination": "docs/",
      "recurse": true,
      "verbose": true,
      "template": "./node_modules/clean-jsdoc-theme",
      "theme_opts": {
          "default_theme": "light",
          "homepageTitle": "Todo JSDoc"
      }
  },
  "markdown": {
    "hardwrap": false,
    "idInHeadings": true
}
}